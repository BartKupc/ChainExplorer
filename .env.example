# Which chain to use by default if ?chain= is not provided
ACTIVE_CHAIN=hardhat

# ----- Optional RPC overrides (leave blank to use chains.yaml fallbacks) -----

# Hardhat (local)
RPC_HARDHAT=http://127.0.0.1:8545
WS_HARDHAT=ws://127.0.0.1:8545

# Sepolia (example: https://sepolia.infura.io/v3/<YOUR_KEY>)
RPC_SEPOLIA=
WS_SEPOLIA=

# Base mainnet (example: https://base-mainnet.g.alchemy.com/v2/<YOUR_KEY>)
RPC_BASE=
WS_BASE=

# Base Sepolia
RPC_BASE_SEPOLIA=
WS_BASE_SEPOLIA=

# Cronos mainnet
RPC_CRONOS=https://cronos-evm.publicnode.com
WS_CRONOS=

# Cronos testnet
RPC_CRONOS_TESTNET=https://evm-t3.cronos.org
WS_CRONOS_TESTNET=

# Ethereum mainnet (example: https://mainnet.infura.io/v3/<YOUR_KEY>)
RPC_ETH=https://cloudflare-eth.com
WS_ETH=

# ----- App settings (safe defaults for dev) -----
FLASK_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=change-me-dev-only

# Optional: how many recent blocks to scan for ERC-20 transfers (Phase 2)
DEFAULT_BLOCK_WINDOW=5000